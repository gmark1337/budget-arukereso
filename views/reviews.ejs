<div id="reviews">
  <!--TOOLBAR (egy sorban)  -->
  <form id="review-submit" class="reviews-toolbar" action="javascript:void(0)">
    <label><%= p.reviews.form.site[lang] %>:
      <select name="vendor" id="review-vendor">
        <option value="hervis">Hervis</option>
        <option value="sinsay">Sinsay</option>
        <option value="aboutyou">aboutYou</option>
        <option value="sportisimo">Sportisimo</option>
        <option value="decathlon">Decathlon</option>
        <option value="mangooutlet">mangoOutlet</option>
      </select>
    </label>

    <label><%= p.reviews.form.review[lang] %>:
      <textarea required id="review-text" placeholder="<%=
p.reviews.form.placeholder[lang] %>"></textarea>
    </label>

    <label class="score"><%= p.reviews.form.score[lang] %>:
      <input type="range" id="review-quality" min="1" max="5" value="3"
             oninput="this.nextElementSibling.value = this.value" />
      <output id="quality-value">3</output>
    </label>

    <button id="review-send" class="btn primary" type="button"><%=
p.reviews.form.send[lang] %></button>
    <button id="review-cancel" class="btn" type="button"><%=
p.reviews.close[lang] %></button>
  </form>

  <!--  FŐ TARTALOM: boltok oszlopokban (6)  -->
  <% if (reviews.length === 0) { %>
    <div class="reviews-content">
      <fieldset class="review-site">
        <legend><%= p.reviews.title[lang] %></legend>
        <div class="items">
          <div class="item">
            <div class="review-menu"><%= p.reviews.empty[lang] %></div>
          </div>
        </div>
      </fieldset>
    </div>
  <% } else { %>
    <div class="reviews-content">
      <% reviews.map((site) => { %>
        <fieldset class="review-site">
          <legend><%= site._id %></legend>

          <% if (site.highQualityCount > threshold) { %>
            <div class="trusted-site"><%= p.reviews.trusted[lang] %></div>
          <% } %>

          <div class="items">
            <% if (site.records && site.records.length) { %>
              <% site.records.map((review) => { %>
                <div class="item">
                  <div class="review-menu">
                    <strong><%= review.user %></strong>
                    <span><%= "⭐".repeat(review.quality) %></span>
                  </div>
                  <p class="review-text"><%= review.review %></p>
                </div>
              <% }) %>
            <% } else { %>
              <div class="item">
                <div class="review-menu"><%= p.reviews.empty[lang] %></div>
              </div>
            <% } %>
          </div>
        </fieldset>
      <% }) %>
    </div>
  <% } %>
</div>
